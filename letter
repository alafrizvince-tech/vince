                    <label for="dietary">Dietary Restrictions</label>
                    <input type="text" id="dietary" placeholder="e.g., Vegetarian, Gluten-free, etc.">
                </div>

                <div class="form-group">
                    <label for="message">Special Message for the Birthday Star</label>
                    <textarea id="message" placeholder="Write your birthday wishes here!"></textarea>
                </div>

