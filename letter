    <script>
        const rsvpModal = document.getElementById('rsvpModal');
        const modalTitle = document.getElementById('modalTitle');
        const successMsg = document.getElementById('successMsg');
        const rsvpForm = document.getElementById('rsvpForm');

        function openRSVP(response) {
            rsvpModal.classList.add('active');
            
            const titles = {
                'yes': "üéâ You're Coming!",
                'maybe': "ü§î Let us know...",
                'no': "üò¢ We'll miss you!"
            };

            modalTitle.textContent = titles[response];
            rsvpForm.dataset.response = response;
            successMsg.classList.remove('show');
        }

        function closeModal() {
            rsvpModal.classList.remove('active');
            rsvpForm.reset();
            successMsg.classList.remove('show');
        }

        function submitRSVP(event) {
            event.preventDefault();

            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const guests = document.getElementById('guests').value;
            const dietary = document.getElementById('dietary').value;
            const message = document.getElementById('message').value;
            const response = rsvpForm.dataset.response;

            const rsvpData = {
                name,
                email,
                phone,
                guests,
                dietary,
                message,
                response,
                timestamp: new Date().toISOString()
            };

            // Save to localStorage
            const allRSVPs = JSON.parse(localStorage.getItem('birthdayRSVPs') || '[]');
            allRSVPs.push(rsvpData);
            localStorage.setItem('birthdayRSVPs', JSON.stringify(allRSVPs));

            // Show success message
            successMsg.classList.add('show');

            // Create confetti effect
            createConfetti();

            // Reset form and close after 2 seconds
            setTimeout(() => {
                rsvpForm.reset();
                closeModal();
            }, 2000);

            console.log('RSVP Data:', rsvpData);
        }

        function createConfetti() {
            const colors = ['üéâ', 'üéÇ', 'üéà', 'üéÅ', '‚ú®', 'üéä'];
            
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.innerHTML = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.top = '-20px';
                    confetti.style.fontSize = Math.random() * 20 + 20 + 'px';
                    confetti.style.animation = `confetti-fall ${Math.random() * 2 + 2}s ease-in forwards`;
                    confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                    document.body.appendChild(confetti);

                    setTimeout(() => confetti.remove(), 3000);
                }, i * 30);
            }
        }

        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === rsvpModal) {
                closeModal();
            }
        });

        // Create initial confetti on page load
        window.addEventListener('load', () => {
            createConfetti();
        });

        // Optional: Customize the invitation
        function customizeInvitation(config) {
            if (config.name) {
                document.getElementById('birthdayPerson').textContent = config.name;
            }
        }

        // Example customization:
        // customizeInvitation({ name: 'Your Friend\'s Name' });
    </script>
